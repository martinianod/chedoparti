import React, { useEffect, useState } from 'react';
import { Link } from 'react-router-dom';
import EditButton from '../../components/ui/EditButton';
import CancelButton from '../../components/ui/CancelButton';
import AddButton from '../../components/ui/AddButton';
import ReservationFormModal from '../../components/ui/ReservationFormModal';
import Tabs from '../../components/ui/Tabs';
import { reservationsApi, courtsApi, historyApi, usersApi } from '../../services/api';
import Card from '../../components/ui/Card';
import Button from '../../components/ui/Button';
import Input from '../../components/ui/Input';
import { useTranslation } from 'react-i18next';
import { Lock } from 'lucide-react';
import { FiSearch, FiCalendar, FiClock, FiFilter, FiUser, FiActivity, FiEye } from 'react-icons/fi';
import useAuth from '../../hooks/useAuth';
import { useReservationSync } from '../../utils/reservationSync';
import { getUserDisplayText } from '../../utils/userDisplay';
import { useAppNotifications } from '../../hooks/useAppNotifications';

export default function ReservationsList() {
  const { t } = useTranslation();
  const { user, isAdmin } = useAuth();
  const { reservation: notifications } = useAppNotifications();
  const [rows, setRows] = useState([]);
  const [courts, setCourts] = useState([]);
  const [loading, setLoading] = useState(true);

  // Estados de filtros
  const [searchTerm, setSearchTerm] = useState('');
  const [courtFilter, setCourtFilter] = useState('all');
  const [statusFilter, setStatusFilter] = useState('all');
  const [dateFilter, setDateFilter] = useState('all');

  // Estados del modal
  const [modalOpen, setModalOpen] = useState(false);
  const [modalData, setModalData] = useState(null);

  // Estados para la pesta√±a de historial
  const [history, setHistory] = useState([]);
  const [historyLoading, setHistoryLoading] = useState(false);
  const [historyError, setHistoryError] = useState(null);
  const [users, setUsers] = useState([]); // Para filtro de usuarios en historial
  const [selectedEntry, setSelectedEntry] = useState(null);
  const [detailsModalOpen, setDetailsModalOpen] = useState(false);

  // Filtros para historial
  const [actionFilter, setActionFilter] = useState('all');
  const [userFilter, setUserFilter] = useState('all');
  const [dateFromFilter, setDateFromFilter] = useState('');
  const [dateToFilter, setDateToFilter] = useState('');

   
    'üéØ ReservationsList component mounted for user:',
    user?.email,
    user?.primaryRole || user?.roles?.[0] || user?.role
  );

  // Funci√≥n para renderizar etiqueta de tipo de reserva
  const renderReservationType = (reservation) => {
    const type = reservation.type || 'Normal';

    const typeStyles = {
      Normal: 'bg-gray-600 text-white',
      Fijo: 'bg-blue-600 text-white',
      Torneo: 'bg-pink-600 text-white',
      Academia: 'bg-green-600 text-white',
      Invitado: 'bg-orange-600 text-white',
    };

    const style = typeStyles[type] || typeStyles['Normal'];

    return <span className={`px-2 py-1 rounded-full text-xs font-medium ${style}`}>{type}</span>;
  };

  // Funci√≥n para obtener el deporte de una cancha
  const getCourtSport = (courtId) => {
    const court = courts.find((c) => c.id === courtId);
    return court?.sport || court?.type || t('common.empty');
  };

  // Funci√≥n para determinar si mostrar columna de usuario
  const shouldShowUserColumn = () => {
    const hasAdminRole = user?.roles?.includes('ADMIN') || user?.role === 'ADMIN';
    const hasSocioRole = user?.roles?.includes('SOCIO') || user?.role === 'SOCIO';
    return hasAdminRole || !hasSocioRole;
  };

  // Funci√≥n para validar si un SOCIO puede ver/editar una reserva
  const canAccessReservation = (reservation) => {
    // ADMIN puede acceder a todas las reservas
    const hasAdminRole = user?.roles?.includes('ADMIN') || user?.role === 'ADMIN';
    if (hasAdminRole) return true;

    // SOCIO solo puede acceder a sus propias reservas
    const hasSocioRole = user?.roles?.includes('SOCIO') || user?.role === 'SOCIO';
    if (hasSocioRole && !hasAdminRole) {
      // Si el mock API marc√≥ esta reserva como privada, definitivamente NO es suya
      if (reservation.isPrivateInfo) return false;

      // Verificar propiedad: debe coincidir userId O membershipNumber
      const isOwnerByUserId = reservation.userId && reservation.userId === user.email;
      const isOwnerByMembership =
        user.membershipNumber &&
        reservation.membershipNumber &&
        reservation.membershipNumber === user.membershipNumber;

      return isOwnerByUserId || isOwnerByMembership;
    }

    // Otros roles pueden acceder a todas
    return true;
  };

  // Funci√≥n para cancelar reserva
  const handleCancelReservation = async (reservationId) => {
    const reservation = rows.find((r) => r.id === reservationId);
     

    if (window.confirm(t('reservations.confirm_cancel'))) {
      try {
        // Cancelar en la API
        const response = await reservationsApi.cancel(reservationId, {
          reason: 'Cancelled by user',
        });
         

        // Actualizar el estado local
        setRows((prevRows) =>
          prevRows.map((row) => (row.id === reservationId ? { ...row, status: 'cancelled' } : row))
        );

        // Notificar √©xito
        notifications.cancelSuccess();

        // üîÑ SINCRONIZACI√ìN: En el mock, la cancelaci√≥n ya actualiza el estado global
        // El Dashboard se actualizar√° autom√°ticamente la pr√≥xima vez que se cargue
         
      } catch (error) {
        console.error('‚ùå Error cancelling reservation:', error);
        notifications.cancelError('Error al cancelar la reserva');
      }
    }
  };

  // Funci√≥n para abrir modal de nueva reserva
  const handleNewReservation = () => {
    const today = new Date().toISOString().slice(0, 10);
    const firstCourt = courts.find((c) => c.sport === 'Padel')?.id || courts[0]?.id || 1;

    setModalData({
      date: today,
      time: '09:00',
      sport: 'Padel',
      courtId: firstCourt,
      duration: '01:00',
    });
    setModalOpen(true);
  };

  // Funci√≥n para abrir modal de editar reserva
  const handleEditReservation = (reservation) => {
    const startDate = reservation.startAt ? new Date(reservation.startAt) : new Date();
    const endDate = reservation.endAt ? new Date(reservation.endAt) : new Date();

    // Calcular duraci√≥n
    const durationMs = endDate.getTime() - startDate.getTime();
    const durationHours = Math.floor(durationMs / (1000 * 60 * 60));
    const durationMinutes = Math.floor((durationMs % (1000 * 60 * 60)) / (1000 * 60));
    const duration = `${String(durationHours).padStart(2, '0')}:${String(durationMinutes).padStart(2, '0')}`;

    setModalData({
      id: reservation.id,
      date: startDate.toISOString().slice(0, 10),
      time: startDate.toTimeString().slice(0, 5),
      sport: reservation.sport || getCourtSport(reservation.courtId),
      courtId: reservation.courtId,
      duration: duration || '01:00',
      type: reservation.type || 'Normal',
      userPhone: getUserDisplayText(reservation.user, reservation.userPhone, reservation.userEmail),
      membershipNumber: reservation.membershipNumber,
      // Datos adicionales que puede tener la reserva
      ...reservation,
    });
    setModalOpen(true);
  };

  // Funci√≥n para crear/actualizar reserva
  const handleCreateReservation = async (reservationData) => {
    try {
      let response;

      if (modalData?.id) {
        // Actualizar reserva existente
        response = await reservationsApi.update(modalData.id, reservationData);
         

        // Actualizar el estado local
        setRows((prevRows) =>
          prevRows.map((row) =>
            row.id === modalData.id ? { ...row, ...reservationData, ...response.data } : row
          )
        );

        notifications.updateSuccess();
      } else {
        // Crear nueva reserva
        response = await reservationsApi.create(reservationData);
         

        // Agregar al estado local
        setRows((prevRows) => [...prevRows, response.data]);

        notifications.success();
      }

      // Cerrar modal y recargar lista
      setModalOpen(false);
      setModalData(null);

      // Recargar reservas para obtener datos actualizados
      reloadReservations();
    } catch (error) {
      console.error('‚ùå Error saving reservation:', error);
      notifications.error(error.message || 'Error al guardar la reserva');
    }
  };

  // Cargar canchas para obtener informaci√≥n del deporte
  useEffect(() => {
    courtsApi
      .list()
      .then((res) => {
        const courtsData = res.data?.content || res.data || [];
        setCourts(courtsData);
         
      })
      .catch((error) => {
        console.error('Error loading courts:', error);
        setCourts([]);
      });
  }, []);

  useEffect(() => {
     
      'üìã ReservationsList - Loading reservations for user:',
      user?.email,
      user?.primaryRole || user?.roles?.[0] || user?.role
    );
    reservationsApi
      .list()
      .then((res) => {
         
        const payload = res.data;
        const content = Array.isArray(payload?.content)
          ? payload.content
          : Array.isArray(payload)
            ? payload
            : [];
         
         

        if (content.length === 0) {
           
        } else {
           
            '‚úÖ ReservationsList - Reservations found:',
            content.map((r) => `${r.id}: ${r.user}`)
          );
        }

        setRows(content);
      })
      .catch((error) => {
        console.error('‚ùå ReservationsList - Error loading reservations:', error);
        setRows([]);
      })
      .finally(() => setLoading(false));
  }, [user]);

  // Funci√≥n para recargar reservas
  const reloadReservations = React.useCallback(() => {
     
    setLoading(true);

    reservationsApi
      .list()
      .then((res) => {
        const payload = res.data;
        const content = Array.isArray(payload?.content)
          ? payload.content
          : Array.isArray(payload)
            ? payload
            : [];
         
         
          'üîÑ New reservations data:',
          content.map((r) => ({
            id: r.id,
            user: getUserDisplayText(r.user, r.userPhone, r.userEmail),
            date: r.date,
            time: r.time,
          }))
        );
        setRows(content);
      })
      .catch((error) => {
        console.error('‚ùå Error reloading reservations:', error);
        setRows([]);
      })
      .finally(() => setLoading(false));
  }, []);

  // üîÑ SINCRONIZACI√ìN: Escuchar cambios de reservas desde Dashboard u otras vistas
  useReservationSync((event) => {
     
     
    // Recargar lista cuando cambian las reservas desde Dashboard
    reloadReservations();
  });

  // Funci√≥n para filtrar reservas
  const filteredRows = rows.filter((reservation) => {
    // Filtro de b√∫squeda
    const userText = getUserDisplayText(
      reservation.user,
      reservation.userPhone,
      reservation.userEmail
    );
    const matchesSearch =
      userText.toLowerCase().includes(searchTerm.toLowerCase()) ||
      (reservation.membershipNumber || '').toLowerCase().includes(searchTerm.toLowerCase()) ||
      (reservation.id || '').toString().includes(searchTerm.toLowerCase());

    // Filtro por cancha
    const matchesCourt = courtFilter === 'all' || reservation.courtId === parseInt(courtFilter);

    // Filtro por estado
    const matchesStatus = statusFilter === 'all' || reservation.status === statusFilter;

    // Filtro por fecha
    const matchesDate = (() => {
      if (dateFilter === 'all') return true;

      const today = new Date();
      const reservationDate = new Date(reservation.startAt || reservation.date);

      switch (dateFilter) {
        case 'today':
          return reservationDate.toDateString() === today.toDateString();
        case 'week':
          const weekFromNow = new Date(today.getTime() + 7 * 24 * 60 * 60 * 1000);
          return reservationDate >= today && reservationDate <= weekFromNow;
        case 'past':
          return reservationDate < today;
        default:
          return true;
      }
    })();

    return matchesSearch && matchesCourt && matchesStatus && matchesDate;
  });

  // Obtener estad√≠sticas
  const stats = {
    total: filteredRows.length,
    confirmed: rows.filter((r) => r.status === 'confirmed').length,
    cancelled: rows.filter((r) => r.status === 'cancelled').length,
    pending: rows.filter((r) => r.status === 'pending').length,
  };

  // ========== FUNCIONES PARA HISTORIAL ==========

  // Verificar permisos de admin para historial
  const hasAdminRole = user?.role === 'ADMIN' || (user?.roles && user.roles.includes('ADMIN'));

  // Cargar historial
  const loadHistory = async () => {
    setHistoryLoading(true);
    setHistoryError(null);
    try {
      const params = {
        search: searchTerm,
        action: actionFilter,
        userId: userFilter !== 'all' ? userFilter : null,
        dateFrom: dateFromFilter,
        dateTo: dateToFilter,
      };

      const response = await historyApi.list(params);
      const historyData = Array.isArray(response?.data?.content)
        ? response.data.content
        : Array.isArray(response?.data)
          ? response.data
          : [];

      setHistory(historyData);
    } catch (error) {
      console.error('Error loading history:', error);
      setHistoryError('Error al cargar el historial');
      setHistory([]);
    } finally {
      setHistoryLoading(false);
    }
  };

  // Cargar usuarios para filtro
  const loadUsers = async () => {
    try {
      const response = await usersApi.list();
      const usersData = Array.isArray(response?.data?.content)
        ? response.data.content
        : Array.isArray(response?.data)
          ? response.data
          : [];
      setUsers(usersData);
    } catch (error) {
      console.error('Error loading users:', error);
      setUsers([]);
    }
  };

  // Funciones de utilidad para historial
  const getStatusStyles = (status) => {
    const statusMap = {
      confirmed: 'bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-300',
      pending: 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/20 dark:text-yellow-300',
      cancelled: 'bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-300',
      completed: 'bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-300',
      deleted: 'bg-gray-100 text-gray-800 dark:bg-gray-900/20 dark:text-gray-300',
    };
    return statusMap[status] || 'bg-gray-100 text-gray-800 dark:bg-gray-900/20 dark:text-gray-300';
  };

  const getActionStyles = (actionType) => {
    const actionMap = {
      CREATE: 'bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-300',
      UPDATE: 'bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-300',
      CANCEL: 'bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-300',
      COMPLETE: 'bg-purple-100 text-purple-800 dark:bg-purple-900/20 dark:text-purple-300',
      NO_SHOW: 'bg-orange-100 text-orange-800 dark:bg-orange-900/20 dark:text-orange-300',
      DELETE: 'bg-gray-100 text-gray-800 dark:bg-gray-900/20 dark:text-gray-300',
    };
    return (
      actionMap[actionType] || 'bg-gray-100 text-gray-800 dark:bg-gray-900/20 dark:text-gray-300'
    );
  };

  const formatDateTime = (dateString) => {
    if (!dateString) return '-';
    return new Date(dateString).toLocaleString('es-ES', {
      year: 'numeric',
      month: '2-digit',
      day: '2-digit',
      hour: '2-digit',
      minute: '2-digit',
    });
  };

  // Configurar pesta√±as
  const tabs = [
    {
      label: t('reservations.tabs.active', 'Activas'),
      icon: 'üèì',
    },
    {
      label: t('reservations.tabs.all', 'Todas'),
      icon: 'üìã',
    },
    ...(hasAdminRole
      ? [
          {
            label: t('reservations.tabs.history', 'Historial'),
            icon: 'üìä',
          },
        ]
      : []),
  ];

  // ========== FUNCIONES RENDER PARA PESTA√ëAS ==========

  const renderActiveReservationsTab = () => {
    const activeRows = filteredRows.filter(
      (r) => r.status !== 'cancelled' && r.status !== 'deleted'
    );
    return renderReservationsTable(activeRows);
  };

  const renderAllReservationsTab = () => {
    return renderReservationsTable(filteredRows);
  };

  const renderHistoryTab = () => {
    // Cargar historial si a√∫n no se ha cargado
    React.useEffect(() => {
      if (hasAdminRole) {
        loadHistory();
        loadUsers();
      }
    }, [hasAdminRole]);

    return (
      <div className="space-y-4">
        {/* Filtros de historial */}
        <div className="grid grid-cols-1 md:grid-cols-4 gap-4">
          <Input
            placeholder="Buscar en historial..."
            value={searchTerm}
            onChange={(e) => setSearchTerm(e.target.value)}
          />
          <select
            value={actionFilter}
            onChange={(e) => setActionFilter(e.target.value)}
            className="input"
          >
            <option value="all">Todas las acciones</option>
            <option value="CREATE">Creaciones</option>
            <option value="UPDATE">Modificaciones</option>
            <option value="CANCEL">Cancelaciones</option>
            <option value="DELETE">Eliminaciones</option>
          </select>
          <Input
            type="date"
            value={dateFromFilter}
            onChange={(e) => setDateFromFilter(e.target.value)}
            placeholder="Desde"
          />
          <Input
            type="date"
            value={dateToFilter}
            onChange={(e) => setDateToFilter(e.target.value)}
            placeholder="Hasta"
          />
        </div>

        {/* Tabla de historial */}
        {historyLoading ? (
          <div className="text-center py-8">Cargando historial...</div>
        ) : historyError ? (
          <div className="text-red-600 py-8">{historyError}</div>
        ) : (
          <div className="overflow-x-auto">
            <table className="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
              <thead className="bg-gray-50 dark:bg-gray-800">
                <tr>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Fecha/Hora
                  </th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Acci√≥n
                  </th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Usuario
                  </th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Reserva
                  </th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Estado
                  </th>
                </tr>
              </thead>
              <tbody className="bg-white dark:bg-gray-900 divide-y divide-gray-200 dark:divide-gray-700">
                {history.map((entry) => (
                  <tr key={entry.id}>
                    <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">
                      {formatDateTime(entry.createdAt)}
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap">
                      <span
                        className={`px-2 py-1 text-xs font-medium rounded-full ${getActionStyles(entry.action)}`}
                      >
                        {entry.action}
                      </span>
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">
                      {entry.userName || entry.userEmail || 'Sistema'}
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">
                      ID: {entry.reservationId}
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap">
                      <span
                        className={`px-2 py-1 text-xs font-medium rounded-full ${getStatusStyles(entry.status)}`}
                      >
                        {entry.status}
                      </span>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        )}
      </div>
    );
  };

  const renderReservationsTable = (dataRows) => {
    return (
      <div className="space-y-4">
        {/* Filtros */}
        <div className="flex flex-col lg:flex-row gap-4">
          <div className="flex-1">
            <div className="relative">
              <FiSearch className="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400" />
              <input
                type="text"
                placeholder={t(
                  'reservations.search_placeholder',
                  'Buscar por usuario, ID o n√∫mero de socio...'
                )}
                value={searchTerm}
                onChange={(e) => setSearchTerm(e.target.value)}
                className="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:border-gray-600 dark:bg-gray-700 dark:text-white"
              />
            </div>
          </div>
          <select
            value={courtFilter}
            onChange={(e) => setCourtFilter(e.target.value)}
            className="lg:w-48 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:border-gray-600 dark:bg-gray-700 dark:text-white"
          >
            <option value="all">{t('reservations.all_courts', 'Todas las canchas')}</option>
            {courts.map((court) => (
              <option key={court.id} value={court.id}>
                {court.name}
              </option>
            ))}
          </select>
          <select
            value={statusFilter}
            onChange={(e) => setStatusFilter(e.target.value)}
            className="lg:w-48 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:border-gray-600 dark:bg-gray-700 dark:text-white"
          >
            <option value="all">{t('reservations.all_statuses', 'Todos los estados')}</option>
            <option value="confirmed">{t('reservations.status.confirmed', 'Confirmada')}</option>
            <option value="pending">{t('reservations.status.pending', 'Pendiente')}</option>
            <option value="cancelled">{t('reservations.status.cancelled', 'Cancelada')}</option>
          </select>
        </div>

        {/* Estad√≠sticas */}
        <div className="bg-blue-50 dark:bg-blue-900/20 rounded-lg p-4">
          <div className="flex flex-wrap gap-4 text-sm">
            <span className="text-blue-800 dark:text-blue-300">
              <strong>{stats.total}</strong> {t('reservations.total', 'total')}
            </span>
            <span className="text-green-600 dark:text-green-400">
              <strong>{stats.confirmed}</strong>{' '}
              {t('reservations.status.confirmed', 'confirmadas').toLowerCase()}
            </span>
            <span className="text-yellow-600 dark:text-yellow-400">
              <strong>{stats.pending}</strong>{' '}
              {t('reservations.status.pending', 'pendientes').toLowerCase()}
            </span>
            <span className="text-red-600 dark:text-red-400">
              <strong>{stats.cancelled}</strong>{' '}
              {t('reservations.status.cancelled', 'canceladas').toLowerCase()}
            </span>
          </div>
        </div>

        {/* Tabla de reservas */}
        {loading ? (
          <div className="text-center py-8">
            <div className="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600 mx-auto"></div>
            <p className="mt-2 text-gray-600 dark:text-gray-400">{t('common.loading')}</p>
          </div>
        ) : (
          <div className="overflow-x-auto">
            <table className="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
              <thead className="bg-gray-50 dark:bg-gray-800">
                <tr>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    {t('reservations.table.date_time')}
                  </th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    {t('reservations.table.court')}
                  </th>
                  {shouldShowUserColumn() && (
                    <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      {t('reservations.table.user')}
                    </th>
                  )}
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    {t('reservations.table.status')}
                  </th>

# ============================================
# CHEDOPARTI FRONTEND - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# --------------------------------------------
# Sentry (Error Tracking)
VITE_SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# API Configuration
# --------------------------------------------

# Base URL for the API Gateway
# Development: http://localhost:8989/api
# Docker: http://api-gateway:8989/api (uses service name from docker-compose)
# Production: https://api.yourdomain.com/api
VITE_API_BASE_URL=/api

# WebSocket URL for real-time updates
# Development: ws://localhost:8989
# Docker: ws://api-gateway:8989
# Production: wss://api.yourdomain.com
# Note: If not set, will be derived from VITE_API_BASE_URL
VITE_WS_URL=

# --------------------------------------------
# MercadoPago Integration
# --------------------------------------------

# MercadoPago Public Key for payment processing
# Get your keys from: https://www.mercadopago.com.ar/developers/panel/credentials
# Test: TEST-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
# Production: APP_USR-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
VITE_MERCADOPAGO_PUBLIC_KEY=TEST-your-public-key

# --------------------------------------------
# EmailJS Configuration
# --------------------------------------------

# EmailJS Service ID for sending emails
# Get your credentials from: https://dashboard.emailjs.com/admin
VITE_EMAILJS_SERVICE_ID=your_service_id

# EmailJS Template ID for email templates
VITE_EMAILJS_TEMPLATE_ID=your_template_id

# EmailJS Public Key (User ID)
VITE_EMAILJS_PUBLIC_KEY=your_public_key

# --------------------------------------------
# Development & Testing
# --------------------------------------------

# Enable mock API instead of real backend
# Set to 'true' to use mock data for development/testing
# Set to 'false' or leave empty to use real API
VITE_USE_MOCK_API=false

# --------------------------------------------
# Optional Configuration
# --------------------------------------------

# Application Environment
# Options: development, staging, production
# Note: Vite automatically sets import.meta.env.DEV and import.meta.env.PROD
# VITE_APP_ENV=development

# Enable debug mode (additional console logging)
# VITE_DEBUG=false

# Sentry DSN for error tracking (production)
# VITE_SENTRY_DSN=

# Google Analytics ID (production)
# VITE_GA_ID=

# ============================================
# NOTES
# ============================================
#
# 1. All environment variables must be prefixed with VITE_ to be exposed to the client
# 2. Changes to .env require restarting the dev server (npm run dev)
# 3. Never commit sensitive keys to version control
# 4. For production, set these variables in your hosting platform (Netlify, Vercel, etc.)
# 5. Docker users: These values can be overridden in docker-compose.yml
#
